<p style="color: green"><%= notice %></p>


<h1>Tasks</h1>
<ul>
  <li> <%= link_to  "Home", tasks_path %></li>
  <li><%= link_to  "New task", new_task_path %></li>
</ul>
<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<div id = "newbutton">
<%= link_to  "New task", new_task_path %>
</div>